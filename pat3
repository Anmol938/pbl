
public class Pat3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int N = 10;
		
		
		for(int i = 1; i <= N; i++)
		{
			
			 	for(int j = 1; j <= N-i;j++ )
			 	{
			 		
			 		
			 		System.out.print(" ");
			 	}
			 	
			 	for(int k =1; k<=i;k++)
			 	{
			 		
			 		System.out.print(k);
			 		
			 	}
			 	
			 	for(int L = i-1; L >=1;L--)
			 	{
			 		System.out.print(L);
			 	}
			 	
			 	
			 	
			 	System.out.println();
			
		}
		
		
	}

}
